<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#855B5B"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/select_pdf_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="54dp"

        android:backgroundTint="#4C971F"
        android:text="Select PDF"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/download_pdf_button"
        app:layout_constraintEnd_toEndOf="@+id/download_pdf_button" />

    <Button
        android:id="@+id/download_pdf_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="328dp"
        android:backgroundTint="#AE0F0F"
        android:enabled="false"
        android:text="Download PDF"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
